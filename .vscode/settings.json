{
  // === TypeScript & ESLint Validation ===
  // Enable TypeScript validation (shows type errors as diagnostics)
  "typescript.validate.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  
  // Enable ESLint for TypeScript files
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [
    { "directory": "web", "changeProcessCWD": true },
    { "directory": ".", "changeProcessCWD": true }
  ],
  
  // === Snowflake VSCode Extension ===
  // Install the extension: search "Snowflake" in VSCode Extensions marketplace
  
  // Associate .sql files with Snowflake SQL for syntax highlighting
  "files.associations": {
    "*.sql": "snowflake-sql"
  },
  
  // Enable SQL syntax highlighting in Python strings (for Snowpark)
  "snowflake.syntaxHighlighting.autoDetectSqlInPython": true,
  
  // Show execute button above each SQL statement
  "snowflake.showExecuteAboveStatement": true,
  
  // Keep session alive to avoid re-authentication
  "snowflake.setClientSessionKeepAlive": true
}
