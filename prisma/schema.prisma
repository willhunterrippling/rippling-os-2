// Prisma schema for Rippling OS
// Shared by web app and CLI scripts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== AUTH (Passcode-based) ====================

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  createdAt     DateTime       @default(now())
  
  passcodes      Passcode[]
  sessions       Session[]
  projects       Project[]      @relation("ProjectOwner")
  sharedProjects ProjectShare[]
}

model Passcode {
  id         String    @id @default(cuid())
  codeHash   String    // bcrypt hashed passcode
  codeHint   String    // Last 4 chars for identification
  userId     String
  name       String?   // Optional label (e.g., "Work laptop")
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==================== APPLICATION DATA ====================

model Project {
  id          String         @id @default(cuid())
  slug        String         @unique
  name        String
  description String?
  ownerId     String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  owner      User           @relation("ProjectOwner", fields: [ownerId], references: [id])
  shares     ProjectShare[]
  dashboards Dashboard[]
  queries    Query[]
  reports    Report[]
}

enum SharePermission {
  VIEW
  EDIT
  ADMIN
}

model ProjectShare {
  id         String          @id @default(cuid())
  projectId  String
  userId     String
  permission SharePermission
  createdAt  DateTime        @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

model Dashboard {
  id        String   @id @default(cuid())
  projectId String
  name      String
  config    Json     // Dashboard config with widget definitions
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  queries DashboardQuery[]

  @@unique([projectId, name])
}

model Query {
  id        String   @id @default(cuid())
  projectId String
  name      String
  sql       String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project    Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  result     QueryResult?
  dashboards DashboardQuery[]
  reports    ReportQuery[]

  @@unique([projectId, name])
}

model QueryResult {
  id         String   @id @default(cuid())
  queryId    String   @unique // One-to-one: latest result only
  data       Json     // Query results as JSON array
  rowCount   Int?
  executedAt DateTime @default(now())
  executedBy String?  // Email of user who ran it

  query Query @relation(fields: [queryId], references: [id], onDelete: Cascade)
}

model Report {
  id        String   @id @default(cuid())
  projectId String
  name      String
  content   String   @db.Text // Markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  queries ReportQuery[]

  @@unique([projectId, name])
}

// ==================== QUERY RELATIONSHIPS ====================

model DashboardQuery {
  id          String   @id @default(cuid())
  dashboardId String
  queryId     String
  createdAt   DateTime @default(now())

  dashboard Dashboard @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  query     Query     @relation(fields: [queryId], references: [id], onDelete: Cascade)

  @@unique([dashboardId, queryId])
}

model ReportQuery {
  id        String   @id @default(cuid())
  reportId  String
  queryId   String
  createdAt DateTime @default(now())

  report Report @relation(fields: [reportId], references: [id], onDelete: Cascade)
  query  Query  @relation(fields: [queryId], references: [id], onDelete: Cascade)

  @@unique([reportId, queryId])
}
